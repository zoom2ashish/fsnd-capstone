{
  "openapi": "3.0.0",
  "info": {
    "description": "Movies",
    "version": "1.0.0",
    "title": "Casting Agency - FSND Capstone App",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Movie Request",
      "description": "API for requesting and return movie information"
    },
    {
      "name": "Actor Request",
      "description": "PI for requesting and return actor information"
    }
  ],
  "paths": {
    "/api/movies": {
      "get": {
        "tags": [
          "Movie Request"
        ],
        "summary": "Returns MovieList",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/MovieList"
            }
          }
        }
      }
    },
    "/api/movies/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the cat that we want to match",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Movie Request"
        ],
        "summary": "Get Movie with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Movie id",
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/Movie"
            }
          },
          "400": {
            "description": "Failed. Misunderstood Request."
          },
          "404": {
            "description": "Failed. Book request not found."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "id": {
        "properties": {
          "id": {
            "type": "string"
          }
        }
      },
      "MovieRequestPostBody": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "format": "string"
          },
          "release_date": {
            "type": "string",
            "format": "number"
          }
        }
      },
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "number"
          },
          "title": {
            "type": "string",
            "format": "string"
          },
          "releasedate": {
            "type": "string",
            "format": "number"
          },
          "actors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Actor"
            }
          }
        }
      },
      "MovieList": {
        "type": "object",
        "properties": {
          "count": {
            "type": "number"
          },
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Movie"
            }
          }
        }
      },
      "Actor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "gender": {
            "type": "string",
            "enum": [
              "Male", "Female", "Unknown"
            ]
          }
        }
      },
      "Gender": {
        "type": "string",
        "enum": [
          "Male", "Female", "Unknown"
        ]
      },
      "ApiError": {
        "properties": {
          "success": {
            "type": "boolean"
          },
          "error": {
            "type": "number"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}
